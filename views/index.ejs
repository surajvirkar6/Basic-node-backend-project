<html>

<head>
  <title>Test App</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"></script>
</head>

<body>
  <div class="container text-center">
    <h1>Test App</h1>
    <button onclick="window.location.href='/bored'" class="btn btn-primary my-2">Bored API Example</button>
    <button onclick="window.location.href='/trump'" class="btn btn-primary my-2">Donald Trump API Example</button>
    <br><br>
    <hr><br>
    <h1>Event management System</h1>
  </div>

  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
      <a class="navbar-brand">Event management System</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/invite">Send Invite</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/addEvent">Add Event</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container my-3">
    <% if(events.length> 0) { %>
      <% for(let i=0; i < events.length; i++) { %>
        <div class="card mb-3" style="width: 18rem;">
          <div class="card-body">
            <h5 class="card-title">
              <%= events[i].eventName %>
            </h5>
            <p>
              <%= events[i].eventDate %>
            </p>
            <p class="card-text">
              <%= events[i].eventDescription %>
            </p>
          </div>
        </div>
        <% } %>
          <% } else { %>
            <h3>No events found</h3>
            <% } %>
  </div>
</body>
</html>